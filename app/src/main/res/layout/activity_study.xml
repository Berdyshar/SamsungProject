<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ActivityStudy"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linlayTV">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Studing"
            android:textColor="@color/black"
            android:id="@+id/tvStuding"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="5dp"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="@string/write_right_answer_please"-->
<!--        android:textSize="20sp"-->
<!--        android:id="@+id/tvCWAP"-->
<!--        android:layout_marginHorizontal="8dp"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tvStuding"/>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linlayTV"
        android:id="@+id/tvQuestion"
        android:text="Question"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/CL1"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="10dp">
        <EditText
            app:layout_constraintTop_toTopOf="@id/CL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etInputTranslationStudy"
            app:layout_constraintStart_toStartOf="@id/CL1"
            app:layout_constraintEnd_toEndOf="@id/CL1"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:hint="Input translation"
            android:textSize="30sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_height="wrap_content"
            android:text="Answer"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/etInputTranslationStudy"
            android:id="@+id/btnAnswer"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>